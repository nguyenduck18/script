local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hrp = char:FindFirstChild("HumanoidRootPart")
local runService = game:GetService("RunService")

-- Khoáº£ng cÃ¡ch Ä‘á»ƒ tá»± Ä‘á»™ng kÃ­ch hoáº¡t lever
local detectRange = 10 

local function findLever()
    for _, v in pairs(workspace:GetDescendants()) do
        if v:IsA("ProximityPrompt") and v.Parent and (v.Parent.Position - hrp.Position).Magnitude <= detectRange then
            return v
        end
    end
    return nil
end

-- Tá»± Ä‘á»™ng gáº¡t lever khi Ä‘áº¿n gáº§n
runService.Heartbeat:Connect(function()
    local lever = findLever()
    if lever then
        print("ðŸ”´ PhÃ¡t hiá»‡n lever! Gáº¡t tá»± Ä‘á»™ng...")
        fireproximityprompt(lever)
        wait(0.5) -- Äá»£i game pháº£n há»“i

        -- Náº¿u lever cáº§n giá»¯ chuá»™t Ä‘á»ƒ gáº¡t, ta cÃ³ thá»ƒ tá»± Ä‘á»™ng giá»¯ vÃ  tháº£
        local VirtualInputManager = game:GetService("VirtualInputManager")
        VirtualInputManager:SendMouseButtonEvent(0, 0, 0, true, game, 0) -- Giá»¯ chuá»™t
        wait(6) -- Äiá»u chá»‰nh náº¿u lever load lÃ¢u hÆ¡n
        VirtualInputManager:SendMouseButtonEvent(0, 0, 0, false, game, 0) -- Tháº£ chuá»™t

        print("âœ… Lever Ä‘Ã£ Ä‘Æ°á»£c kÃ©o tá»± Ä‘á»™ng!")
    end
end)
